<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="1250.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ERP.Controller.Toolkit.ShowObject.ShowObject_Controller">
   <center>
      <TableView fx:id="TableView" onKeyReleased="#TableViewKeyReleased" onMouseClicked="#TableViewMouseClicked" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="ObjectIDColumn" prefWidth="70.0" resizable="false" style="-fx-alignment: CENTER-LEFT; -fx-font-siz: 14px;" text="對象編號" />
            <TableColumn fx:id="ObjectNameColumn" prefWidth="230.0" resizable="false" style="-fx-alignment: CENTER-LEFT; -fx-font-siz: 14px;" text="對象名稱" />
            <TableColumn fx:id="ContactPersonColumn" resizable="false" style="-fx-alignment: CENTER-LEFT; -fx-font-siz: 14px;" text="聯絡人" />
            <TableColumn fx:id="TelephoneColumn" prefWidth="140.0" resizable="false" style="-fx-alignment: CENTER-LEFT; -fx-font-siz: 14px;" text="電話" />
            <TableColumn fx:id="TaxIDNumberColumn" prefWidth="100.0" resizable="false" style="-fx-alignment: CENTER-LEFT; -fx-font-siz: 14px;" text="統一編號" />
            <TableColumn fx:id="CompanyAddressColumn" prefWidth="380.0" resizable="false" style="-fx-alignment: CENTER-LEFT; -fx-font-siz: 14px;" text="公司地址" />
            <TableColumn fx:id="ReceivableDiscountColumn" prefWidth="70.0" resizable="false" style="-fx-alignment: CENTER-LEFT; -fx-font-siz: 14px;" text="收款折扣" />
            <TableColumn fx:id="PrintPricingColumn" resizable="false" style="-fx-alignment: CENTER-LEFT; -fx-font-siz: 14px;" text="出單印定價" />
            <TableColumn fx:id="SaleModelColumn" resizable="false" style="-fx-alignment: CENTER-LEFT; -fx-font-siz: 14px;" text="出售模式" />
         </columns>
         <padding>
            <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
         </padding>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="54.0" prefWidth="1260.0" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="objectCanGet_Button" mnemonicParsing="false" onMouseClicked="#GetObjectMouseClicked" prefWidth="120.0" text="取得">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="26.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../Image/Get.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button mnemonicParsing="false" onMouseClicked="#CloseMouseClicked" prefWidth="120.0" text="離開">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="26.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../Image/Close.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
